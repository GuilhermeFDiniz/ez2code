<%= form_with url: products_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Product"
  %>
  <%= button_tag(class: " btn btn-primary") do %>
    <i class= "fa-solid fa-magnifying-glass"></i>
  <% end %>
<% end %>
