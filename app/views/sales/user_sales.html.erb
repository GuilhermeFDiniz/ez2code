<div class='container'>
<h1>My Orders</h1>
<%@sales.each do |sale|%>
  <div class='card_org'>
    <div class="card mb-3 me-3" style="width: 18rem;">
    <%if sale.product.photos.first%>
      <%= cl_image_tag sale.product.photos.first.key, class:"card-img-top" %>
      <%end%>
      <div class="card-body">
        <h5 class="card-title"><%="#{sale.product.name}"%></h5>
      </div>
      <ul class="list-group list-group-flush">
       <p><li class="list-group-item"><%="#{number_to_currency(sale.product.price, unit: "R$")}"%></li></p>
        <li class="list-group-item"><%="Vendido por #{sale.product.user.first_name}"%></li>
      </ul>
      <%# <%= link_to "Details", product_sale_path(product), class: 'btn btn-primary' %>


  </div>
<%end%>
</div>
