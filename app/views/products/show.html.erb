<h1>Show Products</h1>

<%= @product.name %>
<%= number_to_currency(@product.price)  %>
<%= @product.details %>
<%= @product.user.first_name %>
<% @product.photos.each do |photo| %>
<%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<%= button_to 'Buy', product_sales_path(@product), data: {turbo_method: :post} unless @product.user == current_user %>
